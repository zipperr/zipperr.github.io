<span class='line-number'>6</span>
<span class='line-number'>7</span>
<span class='line-number'>8</span>
<span class='line-number'>9</span>
<span class='line-number'>10</span>
<span class='line-number'>11</span>
<span class='line-number'>12</span>
<span class='line-number'>13</span>
<span class='line-number'>14</span>
<span class='line-number'>15</span>
<span class='line-number'>16</span>
<span class='line-number'>17</span>
<span class='line-number'>18</span>
<span class='line-number'>19</span>
<span class='line-number'>20</span>
<span class='line-number'>21</span>
<span class='line-number'>22</span>
<span class='line-number'>23</span>
</pre></td><td class='code'><pre><code class=''><span class='line'>public GameObject bullet;
</span><span class='line'>// 弾丸発射点
</span><span class='line'>public Transform muzzle;
</span><span class='line'>// 弾丸の速度
</span><span class='line'>public float speed = 1000;
</span><span class='line'>// Use this for initialization&lt;/p&gt;
</span><span class='line'>
</span><span class='line'>&lt;p&gt;void Start () {
</span><span class='line'>}&lt;/p&gt;
</span><span class='line'>
</span><span class='line'>&lt;p&gt;void Update () {
</span><span class='line'>    // z キーが押された時
</span><span class='line'>    if(Input.GetKeyDown (KeyCode.Z)){
</span><span class='line'>    // 弾丸の複製
</span><span class='line'>    GameObject bullets = GameObject.Instantiate(bullet)as GameObject;
</span><span class='line'>    Vector3 force;
</span><span class='line'>    force = this.gameObject.transform.forward * speed;
</span><span class='line'>    // Rigidbodyに力を加えて発射
</span><span class='line'>    bullets.GetComponent&lt;Rigidbody&gt;().AddForce (force);
</span><span class='line'>    // 弾丸の位置を調整
</span><span class='line'>    bullets.transform.position = muzzle.position;
</span><span class='line'>    }
</span><span class='line'>}</span></code></pre></td></tr></table></div></figure></p>
]]></content>
