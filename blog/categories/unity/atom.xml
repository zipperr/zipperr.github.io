</pre></td><td class='code'><pre><code class=''><span class='line'>using System.Collections;
</span><span class='line'>using System.Collections.Generic;
</span><span class='line'>using UnityEngine;
</span><span class='line'>using UnityEngine.SceneManagement;&lt;/p&gt;
</span><span class='line'>
</span><span class='line'>&lt;p&gt;public class red : MonoBehaviour {&lt;/p&gt;
</span><span class='line'>
</span><span class='line'>&lt;pre&gt;&lt;code&gt;// Use this for initialization
</span><span class='line'>void Start () {
</span><span class='line'>
