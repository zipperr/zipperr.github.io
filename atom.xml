</span><span class='line'>using UnityEngine;
</span><span class='line'>using UnityEngine.SceneManagement;
</span><span class='line'> 
</span><span class='line'>public class red : MonoBehaviour {
</span><span class='line'> 
</span><span class='line'>  // Use this for initialization
</span><span class='line'>  void Start () {
</span><span class='line'>      
